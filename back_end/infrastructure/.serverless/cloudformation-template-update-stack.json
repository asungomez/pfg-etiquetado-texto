{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "AmplifyRole": {
      "Type": "AWS::IAM::Role",
      "DeletionPolicy": "Delete",
      "Properties": {
        "RoleName": "prueba-amplify-role",
        "Description": "Amplify app IAM role",
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "amplify.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        }
      }
    },
    "AmplifyApp": {
      "DependsOn": [
        "AmplifyRole"
      ],
      "Type": "AWS::Amplify::App",
      "DeletionPolicy": "Delete",
      "Properties": {
        "CustomRules": [
          {
            "Source": "/site.webmanifest",
            "Status": "200",
            "Target": "/site.webmanifest"
          },
          {
            "Source": "/icon.ico",
            "Status": "200",
            "Target": "/icon.ico"
          },
          {
            "Source": "/icon16x16.png",
            "Status": "200",
            "Target": "/icon16x16.png"
          },
          {
            "Source": "/icon32x32.png",
            "Status": "200",
            "Target": "/icon32x32.png"
          },
          {
            "Source": "</^[^.]+$|\\.(?!(css|gif|ico|jpg|js|png|txt|svg|woff|ttf|map|json)$)([^.]+$)/>",
            "Status": "200",
            "Target": "/index.html"
          },
          {
            "Source": "/<*>",
            "Status": "404",
            "Target": "/index.html"
          }
        ],
        "Description": "Amplify app for React app",
        "EnableBranchAutoDeletion": false,
        "EnvironmentVariables": [
          {
            "Name": "CHOKIDAR_USEPOLLING",
            "Value": "1"
          },
          {
            "Name": "CI",
            "Value": "1"
          },
          {
            "Name": "_LIVE_UPDATES",
            "Value": "[{\"pkg\":\"@aws-amplify/cli\",\"type\":\"npm\",\"version\":\"latest\"}]"
          }
        ],
        "IAMServiceRole": {
          "Fn::GetAtt": [
            "AmplifyRole",
            "Arn"
          ]
        },
        "Name": "prueba-amplify-app",
        "OauthToken": "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"
      }
    },
    "AmplifyRolePolicy": {
      "DependsOn": [
        "AmplifyRole",
        "AmplifyApp"
      ],
      "Type": "AWS::IAM::Policy",
      "Properties": {
        "PolicyName": "prueba-amplify-app",
        "Roles": [
          {
            "Ref": "AmplifyRole"
          }
        ],
        "PolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Action": [
                "amplify:*"
              ],
              "Resource": {
                "Fn::GetAtt": [
                  "AmplifyApp",
                  "Arn"
                ]
              }
            }
          ]
        }
      }
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": "prueba-deployment-bucket",
      "Export": {
        "Name": "sls-amplify-app-dev-ServerlessDeploymentBucketName"
      }
    },
    "AppId": {
      "Description": "Amplify App ID",
      "Value": {
        "Fn::GetAtt": [
          "AmplifyApp",
          "AppId"
        ]
      },
      "Export": {
        "Name": "prueba-amplify-app-id"
      }
    }
  }
}